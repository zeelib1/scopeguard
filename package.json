{
  "name": "scopeguard",
  "version": "0.1.0",
  "description": "Stop scope creep before it costs you thousands",
  "main": "src/server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "PORT=3001 nodemon src/server/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ts": "ts-node-dev --respawn --transpile-only src/server/server.ts",
    "build": "npm run build:frontend",
    "build:backend": "echo 'TypeScript conversion in progress'",
    "build:frontend": "cd frontend && npm run build",
    "start": "PORT=3001 node src/server/server.js",
    "start:frontend": "cd frontend && npm run preview",
    "db:init": "node src/database/init.js",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "freelance",
    "scope-creep",
    "project-management",
    "contract"
  ],
  "author": "Autonomous AI Agent",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.1",
    "multer": "^2.0.2",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
